<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.weather.WeatherActivity">

    <ImageView
            android:id="@+id/iv_weather_icon"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_degree"/>
    <TextView
            android:id="@+id/tv_degree"
            android:text="26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon"
            app:layout_constraintEnd_toEndOf="@+id/iv_weather_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_weather_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_chance_of_precipitation" android:visibility="visible"/>
    <TextView
            android:id="@+id/tv_chance_of_precipitation"
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_degree"
            app:layout_constraintEnd_toEndOf="@+id/tv_degree"
            app:layout_constraintStart_toStartOf="@+id/tv_degree"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_wind"/>
    <TextView
            android:id="@+id/tv_wind"
            android:text="7мс"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_chance_of_precipitation"
            app:layout_constraintStart_toStartOf="@+id/tv_chance_of_precipitation"
            app:layout_constraintEnd_toEndOf="@+id/tv_chance_of_precipitation"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_humidity"/>
    <TextView
            android:id="@+id/tv_humidity"
            android:text="80%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_wind"
            app:layout_constraintStart_toStartOf="@+id/tv_wind"
            app:layout_constraintEnd_toEndOf="@+id/tv_wind"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_UV_index"/>
    <TextView
            android:id="@+id/tv_UV_index"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_humidity"
            app:layout_constraintEnd_toEndOf="@+id/tv_humidity"
            app:layout_constraintStart_toStartOf="@+id/tv_humidity"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_clouds"/>
    <TextView
            android:id="@+id/tv_clouds"
            android:text="65%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_UV_index"
            app:layout_constraintEnd_toEndOf="@+id/tv_UV_index"
            app:layout_constraintStart_toStartOf="@+id/tv_UV_index"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>