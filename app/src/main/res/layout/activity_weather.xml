<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.weather.WeatherActivity">

    <ImageView
            android:id="@+id/iv_weather_icon"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:id="@+id/tv_degree"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            style="@style/SingleWeather.Text.Degree"
            tools:text="26"
            tools:layout_editor_absoluteY="232dp" tools:layout_editor_absoluteX="242dp"/>
    <TextView
            android:id="@+id/tv_chance_of_precipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SingleWeather.Text.Other"
            tools:text="30%"
            tools:layout_editor_absoluteY="339dp" tools:layout_editor_absoluteX="246dp"/>
    <TextView
            android:id="@+id/tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SingleWeather.Text.Other"
            tools:text="7мс"
            tools:layout_editor_absoluteY="421dp" tools:layout_editor_absoluteX="247dp"/>
    <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SingleWeather.Text.Other"
            tools:text="80%"
            tools:layout_editor_absoluteY="502dp" tools:layout_editor_absoluteX="246dp"/>
    <TextView
            android:id="@+id/tv_UV_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SingleWeather.Text.Other"
            tools:text="5"
            tools:layout_editor_absoluteY="584dp" tools:layout_editor_absoluteX="258dp"/>
    <TextView
            android:id="@+id/tv_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SingleWeather.Text.Other"
            tools:text="65%"
            tools:layout_editor_absoluteY="666dp" tools:layout_editor_absoluteX="246dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/iv_weather_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/iv_weather_icon"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView3"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5"/>
</androidx.constraintlayout.widget.ConstraintLayout>