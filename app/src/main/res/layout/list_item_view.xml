<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.weather.WeatherActivity">

    <ImageView
            android:id="@+id/iv_weather_icon"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:id="@+id/tv_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            style="@style/SingleWeather.Text.Degree"
            tools:text="26"
            app:layout_constraintEnd_toEndOf="@+id/iv_weather_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_weather_icon"
            />

    <LinearLayout
            android:id="@+id/sub_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_normal_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_degree" app:layout_constraintEnd_toEndOf="@+id/tv_degree"
            app:layout_constraintStart_toStartOf="@+id/tv_degree">

        <TextView
                android:id="@+id/tv_chance_of_precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SingleWeather.Text.Other"
                tools:text="30%"
                android:layout_marginTop="8dp"
                />
        <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SingleWeather.Text.Other"
                tools:text="7мс"
                />
        <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SingleWeather.Text.Other"
                tools:text="80%"
                />
        <TextView
                android:id="@+id/tv_UV_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SingleWeather.Text.Other"
                tools:text="5"
                android:layout_marginTop="8dp"
                />
        <TextView
                android:id="@+id/tv_clouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SingleWeather.Text.Other"
                tools:text="65%"
                android:layout_marginBottom="@dimen/spacing_normal_16"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>